    {{!-- {{#if @details}} --}}
    {{#if true}}
      <div class="flex flex-col w-full">
        <div>
          <div class=" flex flex-row flex-auto">
            <div class="flex-auto">
              Name:
              {{@details.name}}
            </div>
            <div class="flex-auto text-right">
              Analysis date:
              {{@details.inserted_at}}
            </div>
          </div>
          <div class="flex flex-row flex-auto">
            <div class="flex-auto">
              Sample ID:
              {{@details.remoteId}}
            </div>
            <div class="flex-auto text-right flex flex-row justify-self-end justify-end">
              Sample ID:
              <div class="status-box">
              {{@details.status}}
              </div>
            </div>
          </div>
